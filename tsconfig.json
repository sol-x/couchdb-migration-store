{
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2018",
    "lib": ["dom", "es2018", "esnext.asynciterable"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
